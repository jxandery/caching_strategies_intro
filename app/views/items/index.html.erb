<div class="container">
<% cache "items-count-#{Item.maximum(:updated_at)}" do %>
<div class="row">
  <div class="col-sm-12">
    <h1><%= @items.count %> Items</h1>
  </div>
</div>
<% end %>
<% cache "items-list-#{Item.maximum(:updated_at)}" do %>
  <div class="row"></div>
  <% @items.each do |item| %>
    <div class="col-sm-3">
      <h5><%= item.name %></h5>
      <%= link_to(image_tag(item.image_url), item_path(item)) %>
      <p>
      <%= item.description %>
      </p>
    </div>
  <% end %>
<% end %>
</div>

